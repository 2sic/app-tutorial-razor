@inherits Custom.Hybrid.RazorTyped
<hide-silent>
@{
  var data = App.GetQuery("QuickRef-Content-Simulation");
  var MyItem = AsItem(data.GetStream("Default"));
  var prepPres = AsItem(data.GetStream("Presentation"));
}
</hide-silent>
<h4>A Person on <code>MyItem</code></h4>
@{
  var itemPres = MyItem.Presentation;
}
<hide-silent>
  @{ itemPres = prepPres; /* Silent patching for tutorial only, as it's not a standalone view */ }
</hide-silent>
<p>
  Note that the following should be @itemPres.String("Color") (probably green)
</p>
<p style='color: @itemPres.Attribute("Color")'>
  @MyItem.Title
</p>
