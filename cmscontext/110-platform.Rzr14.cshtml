@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;
<hide>
  @* Sys must always be an exact copy of this line, so that we could search/replace *@
  @{ var Sys = CreateInstance("../shared/Helpers.cs").Init(this); }
  @{ dynamic snip = null; }
</hide>


@((snip = Sys.SourceCode.TabsWithSnippet()).SnipStart("snippet"))
  <ol>
    <li>
      <code>.Name</code> Current platform name is: <strong>@CmsContext.Platform.Name</strong>
    </li>
    <li>
      <code>.Type</code> Current platform type is: <strong>@CmsContext.Platform.Type</strong>
    </li>
    <li>
      <code>.Version</code> Current platform version is: <strong>@CmsContext.Platform.Version</strong>
    </li>
  </ol>
@snip.SnipEnd()
