@inherits Custom.Hybrid.Razor14
<hide-silent>
@{ var Sys = GetCode("/shared/Helpers.cs").Init(this); }
@{ var imgDemoHelper = GetCode("../ImgDemoHelpers.cs"); }
</hide-silent>
@{ var snip = Sys.SourceCode.TabsWithSnippet(tabs: "Generated HTML"); }
@snip.SnipStart()
  <hide-silent>@imgDemoHelper.ShowCurrentSrc()</hide-silent>
  @{
    var tomatoPicUrl = App.Path +  "/img/assets/pexels-pixabay-533288.jpg";
    var flatSettings = Kit.Image.Settings(Settings.Images.Content, aspectRatio: "8:1");
  }
  @Kit.Image.Img(tomatoPicUrl, settings: flatSettings)
@Sys.SourceCode.Invisible()
  @{
    var previewTag = Kit.Image.Img(tomatoPicUrl, settings: flatSettings);
    var resultHtml = Sys.SourceCode.ShowResultImg(previewTag);
  }
@snip.SnipEnd(resultHtml)
