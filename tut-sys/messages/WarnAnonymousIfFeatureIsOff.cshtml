@inherits Custom.Hybrid.RazorTyped
@{
  var alertType = MyUser.IsSystemAdmin ? "info" : "danger";
}
@if (Kit.Feature.IsEnabled("PublicEditForm") == false) {
  <div class="alert alert-@alertType">
    <h4><i class="fas fa-exclamation-triangle"></i> Important: The feature "Public Use of Edit Form" is disabled</h4>
    If you want this demo to run for anonymous users you would need it. 
    Register your site on <a href="https://patrons.2sxc.org/" target="_blank">patrons.2sxc.org</a> to get access to the feature.
  </div>
}