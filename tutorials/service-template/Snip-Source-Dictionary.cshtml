@{
  var template = "<strong>[Values:Greeting]</strong> <br> <em>[Values:Intro]</em>";

  var dic = new Dictionary<string, string> {
    { "Greeting", "Hello there ğŸ‘‹ğŸ¾" },
    { "Intro", "This is a simple dic-sample" }
