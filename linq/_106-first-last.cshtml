@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;
@using System.Linq;
<hide>
  @* Sys must always be an exact copy of this line, so that we could search/replace *@
  @{ var Sys = CreateInstance("../shared/Helpers.cs").Init(this); }
  @Html.Partial("_header.cshtml", new { Sys = Sys }) 
  @{
    var persons = AsList(App.Data["Persons"]);
  }
</hide>


<div class="row">
  <div class="col-lg-7">
    <h3>Simple First() and Last()</h3>
    <p>This filters the authors with long first names.</p>
  </div>
  @Html.Partial("../shared/_DefaultInfoSection.cshtml")
</div>

@Sys.SourceCode.SnippetInlineStart("linq-first-last")
  <ol>
    <li>
      First: @persons.First().FirstName
    </li>
    <li>
      Last: @persons.Last().FirstName
    </li>
  </ol>
@Sys.SourceCode.SnippetInlineEnd()


@Sys.PageParts.FooterWithSource()