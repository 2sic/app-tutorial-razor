@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;
@using System.Linq;
<hide>
  @* Sys must always be an exact copy of this line, so that we could search/replace *@
  @{ var Sys = CreateInstance("../shared/Helpers.cs").Init(this); }
  @Html.Partial("header.cshtml", new { Sys = Sys }) 
</hide>


<div @Sys.PageParts.InfoWrapper()>
  @Html.Partial("../shared/_DefaultInfoSection.cshtml")
  <div @Sys.PageParts.InfoIntro()>
    <h2>Take() / Skip()</h2>
  </div>
</div>


@Sys.SourceCode.SnippetInitStart("intro")
  @{
    var persons = AsList(App.Data["Persons"]);
    var books = AsList(App.Data["Books"]);
  }
@Sys.SourceCode.SnippetInitEnd()


<h3>Take(3)</h3>
<p>Take the first three authors.</p>

@Sys.SourceCode.SnippetInlineStart("linq-take")
  <ol>
    @foreach (var person in persons.Take(3)) {
      <li>@person.FirstName @person.LastName</li>
    }
  </ol>
@Sys.SourceCode.SnippetInlineEnd()


<h3>Skip(3)</h3>
<p>Skip the first three authors.</p>

@Sys.SourceCode.SnippetInlineStart("linq-skip")
  <ol>
    @foreach (var person in persons.Skip(3)) {
      <li>@person.FirstName @person.LastName</li>
    }
  </ol>
@Sys.SourceCode.SnippetInlineEnd()


<h3>Skip(3).Take(2)</h3>
<p>Skip the first three authors, then take 2.</p>

@Sys.SourceCode.SnippetInlineStart("linq-take-skip")
  <ol>
    @foreach (var person in persons.Skip(3).Take(2)) {
      <li>@person.FirstName @person.LastName</li>
    }
  </ol>
@Sys.SourceCode.SnippetInlineEnd()


@* Footer *@
@Html.Partial("../Shared/Layout/FooterWithSource.cshtml", new { Sys = Sys })