@Html.Partial("../shared/_source-code.cshtml", new { Path, Size = 1300 }) 
@Html.Partial("../shared/_source-code.cshtml", new { 
  Path,
  Size = 650,
  File = "_240-create metadata.js"
}) 
</hide>