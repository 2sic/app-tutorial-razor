@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;
<hide>
@Html.Partial("_header.cshtml")
@{
  var helper = CreateInstance("../shared/Helpers.cs");
  var infoResources = helper.InfoSection(helper.InfoContent("This tutorial uses turnOn, learn more", "https://app-dev.2sxc.org/tutorial-razor/en-bs4/Home/turn-on/home"), "Resources");
  var randomName = "SuperPoet " + new Random().Next(1000);
}
</hide>
<trim>
  <div class="row">
    <div class="col-md-7">
      <h2>Use the sxc data API to create backend data</h2>
      <div>This page uses the sxc data API to create data for the backend.</div>
      <br>
      In this tutorial you'll learn how to:
      <ul>
        <li>
          Create data using the .create() method
        </li>
      </ul>
      <br>
      Look at the content below to see the effect.
    </div>
    <div class="col-md-5">
      @infoResources
    </div>
  </div>
</trim>

<table id="example-content" class="table">
  <trim>
    <thead>
      <tr>
        <th>Name</th>
        <th>Birth date</th>
        <th>Poems</th>
        <th>Actions</th>
      </tr>
    </thead>
  </trim>
  <tbody>
     @foreach(var poet in AsList(App.Data["PoetsToEdit"])) {
      <tr>
        <td>@poet.Name</td>
        <td>@poet.BirthDate.ToShortDateString()</td>
        <td data-poet="@poet.EntityId">
          @poet.Poems
          <button type="button" class="btn btn-primary" onclick="window.sxcDataTutorial210.updateCount(@poet.EntityId)">Update</button>
        </td>
        <td>
          <button type="button" class="btn btn-primary" onclick="window.sxcDataTutorial210.delete(@poet.EntityId)">Delete Poet</button>
        </td>
      </tr>
    }
  </tbody>
</table>

<div class="row">
  <div class="col-md-3">
    <input id="name" class="form-control" placeholder="Name" value="@randomName">
  </div>
  <div class="col-md-3">
    <input type="date" id="birthdate" class="form-control" min="1938-01-01" max="1949-01-01" placeholder="Birthdate" value="2021-01-01">
  </div>
  <div class="col-md-3">
    <input type="number" id="poems" min="0" class="form-control" placeholder="Poems" value="@(new Random().Next(999))">
  </div>
  <button type="button" class="btn btn-primary" onclick="addPoet()" >Add poet</button>
</div>


@* This tutorial uses turnOn, see https://app-dev.2sxc.org/tutorial-razor/en-bs4/Home/turn-on/home *@
@{
  // Use the PageService to activate turnOn
  GetService<ToSic.Sxc.Services.IPageService>().Activate("turnOn");
}
<turnOn turn-on='{ "run": "window.sxcDataTutorial210.init()", "data": { "moduleId": "@CmsContext.Module.Id" } }'></turnOn>

<script src="@App.Path/js/_210-create data.js"></script>

<hide>
@Html.Partial("../shared/_source-code.cshtml", new { Path, Size = 1150 }) 
@Html.Partial("../shared/_source-code.cshtml", new { 
  Path,
  Size = 600,
  File = "_210-create data.js"
}) 
</hide>