@inherits Custom.Hybrid.Razor12
@using ToSic.Razor.Blade;
<hide>
@Html.Partial("_header.cshtml")
@{
  var helper = CreateInstance("../shared/Helpers.cs");
  var infoResources = helper.InfoSection(helper.InfoContent("This tutorial uses turnOn, learn more", "https://app-dev.2sxc.org/tutorial-razor/en-bs4/Home/turn-on/home"), "Resources");
}
</hide>
<trim>
  <div class="row">
    <div class="col-md-7">
      <h2>Use the sxc data API to update data</h2>
      <div>This page uses the sxc data API to update data in the backend.</div>
      <br>
      In this tutorial you'll learn how to:
      <ul>
        <li>
          Update data using the .update() method
        </li>
      </ul>
      <br>
      Look at the content below to see the effect. 
    </div>
    <div class="col-md-5">
      @infoResources
    </div>
  </div>
</trim>

<table id="example-content" class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Birth date</th>
      <th>Poems</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @{
      var poetIndex = 0;
    }
    @* Reverse show newest entries first *@
    @foreach(var poet in AsList(App.Data["Poets"]).Reverse()) {
      // make sure only 3 elements are shown
      if (poetIndex >= 3) { 
        break; 
      }

      <tr>
        <td>@poet.Name</td>
        <td>@poet.BirthDate.ToShortDateString()</td>
        <td data-poet="@poet.EntityId">@poet.Poems</td>
        <td>
          <button type="button" class="btn btn-primary" onclick="updateMembership(@poet.EntityId)">Update poems</button>
        </td>
      </tr>
      poetIndex++;
    }
  </tbody>
</table>

@* This tutorial uses turnOn, see https://app-dev.2sxc.org/tutorial-razor/en-bs4/Home/turn-on/home *@
@{
  // Use the PageService to activate turnOn
  GetService<ToSic.Sxc.Services.IPageService>().Activate("turnOn");
}
<turnOn turn-on='{ "run": "window.sxcDataTutorial220.init()", "data": { "moduleId": "@CmsContext.Module.Id" } }'></turnOn>

<script src="@App.Path/js/_220-update data.js"></script>

