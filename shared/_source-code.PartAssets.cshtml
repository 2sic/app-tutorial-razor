@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade
@{
  // 1. Activate turnOn
  Kit.Page.Activate("turnOn");

  // 2. Include Bootstrap4 if the framework isn't known
  if (Kit.Css.IsUnknown) {
    Kit.Page.Activate("Bootstrap4");
  }
}

@if (Settings.CodeEditor == "Ace")
{
  <turnOn turn-on='{ 
  "run": "window.razorTutorial.initAceSourceCode()", 
  "data": { 
    "domAttribute": "@DynamicModel.DomAttribute", 
    "sourceCodeId": "@DynamicModel.SourceCodeId", 
    "options": @Kit.Json.ToJson(DynamicModel.Options) 
  }}'></turnOn>
  <script src="@App.Path/dist/ace.min.js" @Kit.Page.AssetAttributes()></script>
} else if (Settings.CodeEditor == "Monaco") {
  <turnOn turn-on='{ 
  "await": "window.require",
  "run": "window.razorTutorial.beforeInitMonacoSourceCode()"
  }'></turnOn>

  <turnOn turn-on='{ 
    "await": "window.monaco",
    "run": "window.razorTutorial.initMonacoSourceCode()", 
    "data": { 
      "domAttribute": "@DynamicModel.DomAttribute", 
      "sourceCodeId": "@DynamicModel.SourceCodeId", 
      "options": @Kit.Convert.Json.ToJson(DynamicModel.Options),
      "appPath": "@App.Path"
    }}'></turnOn>
  <script src="@App.Path/dist/monaco.min.js" data-enableoptimizations="true"></script>
}


