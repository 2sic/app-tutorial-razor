@inherits Custom.Hybrid.Razor14
@{
  // 1. Activate turnOn
  Kit.Page.Activate("turnOn");

  // 2. Include Bootstrap4 if the framework isn't known
  if (Kit.Css.IsUnknown) {
    Kit.Page.Activate("Bootstrap5");
    <div class="alert alert-warning">This Tutorial uses Bootstrap 5, without Bootstrap 5 there will be display errors</div>
  }
}


@* Script Contains ACE9 init code + Accordion JS *@
<script src="@App.Path/dist/scripts.min.js" @Kit.Page.AssetAttributes()></script>

<script src="//cdn.jsdelivr.net/ace/1.2.6/noconflict/ace.js" type="text/javascript" charset="utf-8" @Kit.Page.AssetAttributes(priority: 200)></script>
<script src="//cdn.jsdelivr.net/ace/1.2.6/noconflict/ext-language_tools.js" @Kit.Page.AssetAttributes(priority: 201)></script>

<!-- styles, mainly used for code show/hide -->
<style>
  .code-block .source-code, .fa-chevron-up, 
  .is-expanded .fa-chevron-down  {
    display: none;
  }
  .is-expanded .source-code, 
  .is-expanded .fa-chevron-up {
    display: block;
  }
  .code-block .header {
    display: flex;
    align-items: center;
    cursor: pointer;
    user-select: none;
  }
  .code-block .header img {
    width: 20px;
    height: 20px;
    padding: 5px 4px 4px;
  }

</style>

@* Experimental hide snippet till needed *@
<style>
  .reveal-on-h3 h3::after {
    content: " ➕";
    font-size: smaller;
  }
  .reveal-on-h3.reveal h3::after {
    content: " ➖";
    font-size: smaller;
  }
  .show-hidden-with-reveal hide-silent {
    display: none;
  }
  .show-hidden-with-reveal.reveal hide-silent {
    display: block;
  }
</style>

@* 
  Activate Headings which should reveal snippets on this page
  Should ideally be in this header, because it ensures it will only be called once per page
  This should also work in Oqtane
*@
<turnOn turn-on='{
  "run": "window.snippets.initRevealers()"
}'></turnOn>

