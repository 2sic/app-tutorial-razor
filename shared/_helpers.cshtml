@helper Title(string title) {
  <link rel="stylesheet" href="@App.Path/assets/styles.css" enableoptimizations="true" />
  <h1 @Edit.TagToolbar()>@title</h1>
}

@helper Breadcrumb(string name, string topicUrl) {
  <a href='@Link.To(parameters: "")'>Tutorial Home</a>

  if(!string.IsNullOrEmpty(name)) {
    <text> â€º </text>
    <a href="@Link.To(parameters: topicUrl)">@name</a>
  }
}

@helper TitleAndBreadcrumb(string title, string name, string topicUrl) {
  @Title(title)
  @Breadcrumb(name, topicUrl)
  <hr>
}

@helper TutLink(string label, string target, bool ready = true) {
  var link = ready 
    ? Link.To(parameters: target + "/" + target)
    : "javascript: alert(\'this tutorial is not ready yet\'); ";
  <a href='@link' class='@(ready ? "": "pending")'>@label</a>
   @(ready ? "": " (pending)")
}

@helper TutorialLink(string label, string target, bool ready = true) {
  <li>
    @TutLink(label, target, ready)
  </li>
}

@helper TutorialLinkHome(string label, string target, string description) {
  <li>
    <strong>
    <a href='@Link.To(parameters: target + "/home")'>
      @label
    </a>
    </strong><br>
    @description
  </li>
}