@inherits Custom.Hybrid.Razor14
<hide>
@Html.Partial("_header.cshtml")
@{  
  var Sys = CreateInstance("../shared/Helpers.cs").Init(this);
  string sourceCode = Sys.ShowCodeFile; // must be typed, because Html.Partial on Oqtane can't use dynamic variables
}
</hide>

<div class="row">
  <div class="col-lg-7">
    <h2>Create and Show Variables</h2>
  </div>
  @Html.Partial("../shared/_DefaultInfoSection.cshtml")
</div>

<h3>Basic set variable and show</h3>
<p><code>var Firstname = "Terry"</code> and <code>show with @@firstName</code></p>
@Sys.SourceCode.SnippetInlineStart("basic-set-show")
  @{
    var firstName = "Terry";
  }

  Name: @firstName
@Sys.SourceCode.SnippetInlineEnd()



<hr>
<h3>Numbers and Dates</h3>
<snippet id="basic-numbers-dates">
  @{
    var age = 27;
    var birthday = new DateTime(1999, 09, 09);
  }

  Age: @age <br>
  Birthday: @birthday <br>
  Birthday nicer using ToString("d"): @birthday.ToString("d") <br>
  Birthday as ISO ToString("yyyy-MM-dd"): @birthday.ToString("yyyy-MM-dd")
</snippet>
<hide-silent> @* Show only this snippet *@
  @Html.Partial(sourceCode, new { Path, Snippet = "basic-numbers-dates", Size = 200 }) 
</hide-silent>


<hr>
<h3>Arrays (lists of things)</h3>
<snippet id="basic-arrays">
  @{
    var dogs = new string[] { "hound", "dackel", "doggy" };
    birthday = new DateTime(1999, 09, 09);
  }

  Age: @age <br>
  Birthday: @birthday <br>
  Birthday nicer using ToString("d"): @birthday.ToString("d") <br>
  Birthday as ISO ToString("yyyy-MM-dd"): @birthday.ToString("yyyy-MM-dd")
</snippet>
<hide-silent> @* Show only this snippet *@
  @Html.Partial(sourceCode, new { Path, Snippet = "basic-arrays", Size = 200 }) 
</hide-silent>

<hide>
@Html.Partial("../shared/_PreCodeFooter.cshtml")
@Html.Partial(sourceCode, new { Path, Size = 1000 }) 
</hide>