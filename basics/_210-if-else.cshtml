@inherits Custom.Hybrid.Razor14
<hide>
  @* Sys must always be an exact copy of this line, so that we could search/replace *@
  @{ var Sys = CreateInstance("../shared/Helpers.cs").Init(this); }
  @Html.Partial("_header.cshtml", new { Sys = Sys })
</hide>


<div class="row mb-5">
  <div class="col-lg-7">
    <h2>Using if and if-else</h2>
  </div>
  @Html.Partial("../shared/_DefaultInfoSection.cshtml")
</div>

<h3>Basic <code>if</code></h3>

@Sys.SourceCode.SnippetInlineStart("basic-if")
  @{
    var aValue = "green";
  }
  @if(aValue == "green") {
    <span>it's green </span>
  }
@Sys.SourceCode.SnippetInlineEnd()


<h3>If-Else</h3>

@Sys.SourceCode.SnippetInlineStart("basic-if-else")
  @{
    var val2 = "blue";
  }
  @if(val2 == "green") {
    <span>it's green </span>
  } else {
    <span>it's blue</span>
  }
@Sys.SourceCode.SnippetInlineEnd()


<h3>Using if-else and <code>&lt;text&gt;</code> tags</h3>
<p>This is important, if you have an code block like an if, and you don't want a span-tag or similar in the output</p>

@Sys.SourceCode.SnippetInlineStart("basic-if-else-tags")
  @{
    var val4 = "orange";
  }
  @if(val4 != "pink") {
    <text>it's not pink</text>
  }
@Sys.SourceCode.SnippetInlineEnd()


<h3>Quick if-else using Ternary operator <code>? :</code></h3>

@Sys.SourceCode.SnippetInlineStart("basic-if-else-ternary")
  @{
    var val3 = "blue";
  }
  @(val3 == "red" ? "it's red" : "it's not red")
@Sys.SourceCode.SnippetInlineEnd()


@Sys.PageParts.FooterWithSource()