    <ul>
      <li>
        Use emphemeral fields
      </li>
      <li>
        Use <code>data.parameters</code> in your formulas <em>new in v14</em>
      </li>
    </ul>
    @Html.Partial("./Part NowUsingV2.cshtml")
  </div>
</div>
@Html.Partial("../shared/WarnAnonymousIfFeatureIsOff.cshtml")

@Html.Partial("../Shared/Accordion/Accordion List.cshtml", new { Sys, NameId = "formulas-advanced-page" })


@* From 200 Rest and webapi *@
@Sys.SourceCode.ShowFile("../api/FormulasController.cs")

